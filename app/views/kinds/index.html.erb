<div class="elegant-aero">

<script>$.notify("<%= notice %>", "success");</script>

<h1><%= "#{t('messages.listing')} #{@kinds.model.model_name.human(count: @kinds.count)}" %></h1>

<table width="100%">
  <thead>
    <tr>
      <th><%= @kinds.model.human_attribute_name("kind") %></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @kinds.each do |kind| %>
      <tr style="background: <%= cycle('#C0E1FF', '#C0C1FF')  %>" >
        <td><%= kind.description %></td>
        <td padding="10px" width="50"><%= link_to t('buttons.edit'), edit_kind_path(kind) %></td>
        <td padding="10px" width="50"><%= link_to t('buttons.destroy'), kind_path(kind), method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>
<%= link_to t('buttons.new'), new_kind_path, class: "btn btn-primary" %>
<%= link_to t('buttons.home'), root_path, class: "btn btn-success" %>

</div>