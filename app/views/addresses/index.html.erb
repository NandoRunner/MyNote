<div class="elegant-aero">

<p id="notice"><%= notice %></p>

<h1><%= "#{t('messages.listing')} #{@addresses.model.model_name.human(count: @addresses.count)}" %></h1>

<table>
  <thead>
    <tr>

      <th><%= @addresses.model.human_attribute_name("street") %></th>
      <th><%= @addresses.model.human_attribute_name("city") %></th>
      <th><%= @addresses.model.human_attribute_name("state") %></th>
      <th><%= @addresses.model.human_attribute_name("contact") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr style="background: <%= cycle('#C0E1FF', '#C0C1FF')  %>"> 
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.contact.name %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @addresses %>

<br>
<br>
<div class="actions">
  <%= link_to t('buttons.new'), new_address_path, class: "button" %>
</div>

</div >